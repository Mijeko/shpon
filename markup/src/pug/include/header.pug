include mixin/menuIteminclude mixin/chooseinclude mixin/hamburgerSectionItemheader.header.container    .logo-container        a(href="/").logo-link            img(src='/assets/images/logo.svg').logo-icon    .header-contacts-container        +choose([            {                title: 'Новосибирск',                isActive: false,            },            {                title: 'Барнаул',                isActive: true,            },            {                title: 'Красноярск',                isActive: false,            },        ])        .header-contacts-list            .header-contacts-col                .header-contacts-item.hasGpsIcon ул Попова, 179Б                .header-contacts-item пн-пт с 9 до 18, обед с 13 до 14            .header-contacts-col                .header-contacts-item.hasPhoneIcon                    a(href="tel:+7 (3852) 501-787") +7 (3852) 501-787                .header-contacts-item                    a(href="tel:+7 (962) 797-55-77") +7 (962) 797-55-77            .header-contacts-col                .header-contacts-item.hasMailIcon                    a(href="mailto:master-shpon22@mail.ru") master-shpon22@mail.ru.header-mobile    .header-mobile-row.with-border.extended        -            var options = [                {name: 'Барнаул', value: '1', checked: true},                {name: 'Новосибирск', value: '2'},                {name: 'Красноярск', value: '3'},            ];        .select-box            .select-box__current(tabindex="1")                each option, index in options                    .select-box__value                        input.select-box__input(type="radio" id=index value=option.value name="demo" checked=option.checked)                        p.select-box__input-text #{option.name}                img.select-box__icon(src="http://cdn.onlinewebfonts.com/svg/img_295694.svg" alt="Arrow Icon" aria-hidden="true")            ul.select-box__list                each option, index in options                    li                        label.select-box__option(for=index aria-hidden) #{option.name}        .header-mobile-address ул. Попова, 179Б<br>пн-пт 9–18, обед 13–14    .header-mobile-row        .header-mobile-hamb            .hamburger-menu                input#hamburger-dropdown__toggle(type='checkbox')                label.hamburger-dropdown__btn(for='hamburger-dropdown__toggle')                    .menu.btn1(data-menu='1')                        .icon-left                        .icon-right                .hamburger-dropdown__box                    include block/hamburgerMenuWheat                    include block/hamburgerMenu        .header-mobile-logo            img(src='/assets/images/logo.svg')        .header-mobile-call            img(src='/assets/images/call.svg')        .header-mobile-request            img(src='/assets/images/feedback.svg').menu-list.container    -        var menuList = [            {                title: 'Каталог',                href: '/',                isActive: ''            },            {                title: 'Компания',                href: '/',                isActive: ''            },            {                title: 'Новости',                href: '/',                isActive: ''            },            {                title: 'Продукция',                href: '/',                isActive: ''            },            {                title: 'Прайс-лист',                href: '/',                isActive: ''            },            {                title: 'Доставка',                href: '/',                isActive: 'isActive'            },            {                title: 'Контакты',                href: '/',                isActive: ''            },        ]    each item,index in menuList        +menuItem(item)
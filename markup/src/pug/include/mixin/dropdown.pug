mixin dropdown(items,icon,def)    - var defaultText = def ? def : 'Выберите город'    .custom-dropdown        .select            if(icon)                .custom-dropdown-icon                    img(src="/assets/images/gps.svg")            input(type="hidden" value="")            span.selected=defaultText            .caret        ul.custom-dropdown-menu            each item,index in items                if(item.selected)                    li(data-value=item.value).active=item.name                else                    li(data-value=item.value)=item.name